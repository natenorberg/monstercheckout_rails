<% should_paginate ||= false %>

<div class="panel panel-default reservation-panel">
	<div class='panel-heading'>
		<h3 class="panel-title"><%= title %></h3>
	</div>
	<div class="panel-body">
		<%= link_to new_reservation_path, class: 'btn btn-large btn-primary' do %>
	      <i class="fa fa-plus"></i> New Reservation
	    <% end %>
	</div>
	<% if reservations.any? %>
	<ul class="list-group">
		<% reservations.each do |reservation| %>
			<li class="list-group-item">
				<%= render 'shared/icon_reservation', reservation: reservation %>
			</li>
		<% end %>
    <% if should_paginate && reservations.total_pages > 1 %>
		<li class="list-group-item pagination-item">
      <% page_param_name ||= 'page' %>
			<%= will_paginate reservations, param_name: page_param_name, renderer: BootstrapPagination::Rails %>
		</li>
		<% end %>
	</ul>
	<% else %>
		<div class="panel-body">
			<em>You have no reservations</em>
		</div>
	<% end %>
</div>
