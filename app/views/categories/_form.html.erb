<%= form_for(@category) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control'%>
  </div>

  <%= f.submit "Save Category", class: 'btn btn-large btn-success' %>

<% end %>
